<Window x:Class="AppAMI.RootUser.DeleteAdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppAMI.RootUser" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="DeleteAdminWindow" Height="660"  Width="450" WindowStyle="None" WindowStartupLocation="CenterScreen" >


    <Grid >
        <Grid.RowDefinitions >
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Background="#2d2d30">
            <Label Content="Delete Admin Information" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"  VerticalContentAlignment="Bottom"/>
        </Grid>
        <Grid Grid.Row="1" Margin="60 20">
            

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>



            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">

                <StackPanel      Orientation="Horizontal"  VerticalAlignment="Top" >
                    <Label Content="User Id"  HorizontalAlignment="Left"  />

                </StackPanel>

                <TextBox   x:Name="txtUserId" VerticalContentAlignment="Bottom" 
                     VerticalAlignment="Center" IsReadOnly="True"  />

            </StackPanel>

            <StackPanel Grid.Row="1">

                <StackPanel      Orientation="Horizontal"  VerticalAlignment="Top" >
                    <Label Content="Name"  HorizontalAlignment="Left"  />

                </StackPanel>

                <TextBox   x:Name="txtName" VerticalContentAlignment="Bottom" 
                     VerticalAlignment="Center"  />

            </StackPanel>

            <StackPanel Grid.Row="2">

                <StackPanel      Orientation="Horizontal"  VerticalAlignment="Top" >
                    <Label Content="Password"  HorizontalAlignment="Left"  />

                </StackPanel>

                <PasswordBox  x:Name="passPassword"   VerticalContentAlignment="Bottom" 
                              VerticalAlignment="Center" />

            </StackPanel>

            <StackPanel Grid.Row="3">

                <StackPanel      Orientation="Horizontal"  VerticalAlignment="Top" >
                    <Label Content="Organization"  HorizontalAlignment="Left"  />

                </StackPanel>

                <TextBox   x:Name="txtOrganisation" VerticalContentAlignment="Bottom" 
                     VerticalAlignment="Center"  />

            </StackPanel>

            <StackPanel Grid.Row="4">

                <StackPanel      Orientation="Horizontal"  VerticalAlignment="Top" >
                    <Label Content="Department"  HorizontalAlignment="Left"  />

                </StackPanel>

                <TextBox   x:Name="txtDepartment" VerticalContentAlignment="Bottom" 
                     VerticalAlignment="Center"  />

            </StackPanel>

            <StackPanel Grid.Row="5">

                <StackPanel      Orientation="Horizontal"  VerticalAlignment="Top" >
                    <Label Content="Designation"  HorizontalAlignment="Left"  />

                </StackPanel>

                <TextBox   x:Name="txtDesignation" VerticalContentAlignment="Bottom" 
                     VerticalAlignment="Center"  />

            </StackPanel>

            <StackPanel Grid.Row="6">

                <StackPanel      Orientation="Horizontal"  VerticalAlignment="Top" >
                    <Label Content="User Role"  HorizontalAlignment="Left"  />

                </StackPanel>

                <TextBox   x:Name="txtUserRole" VerticalContentAlignment="Bottom" 
                     VerticalAlignment="Center"  />

            </StackPanel>

            <StackPanel Grid.Row="7">

                <StackPanel      Orientation="Horizontal"  VerticalAlignment="Top" >
                    <Label Content="Email"  HorizontalAlignment="Left"  />

                </StackPanel>

                <TextBox   x:Name="txtEmail" VerticalContentAlignment="Bottom" 
                     VerticalAlignment="Center"  />

            </StackPanel>

            <StackPanel Grid.Row="8">

                <StackPanel      Orientation="Horizontal"  VerticalAlignment="Top" >
                    <Label Content="Phone"  HorizontalAlignment="Left"  />

                </StackPanel>

                <TextBox   x:Name="txtPhone" VerticalContentAlignment="Bottom" 
                     VerticalAlignment="Center"  />

            </StackPanel>

            <StackPanel Grid.Row="9">

                <StackPanel      Orientation="Horizontal"  VerticalAlignment="Top" >
                    <Label Content="Employee Id"  HorizontalAlignment="Left"  />

                </StackPanel>

                <TextBox   x:Name="txtEmployeeId" VerticalContentAlignment="Bottom" 
                     VerticalAlignment="Center"  />

            </StackPanel>


            <Grid  Grid.Row="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>




                <Button  Name="deleteButton" Margin="30 0"  Background="#ff5768" BorderThickness="0"  Click="deleteButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Delete"          HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 10 0" />
                        <Label Content="Delete" Foreground="white" Margin="-5" />

                    </StackPanel>
                </Button>

                <Button  Name="CancelButton" Grid.Column="1"    Margin="30 0" Background="#00a5e3" BorderThickness="0" Click="CancelButton_Click"  >
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Cancel"         HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 10 0" />
                        <Label Content="Cancel" Foreground="white" Margin="-5" />

                    </StackPanel>
                </Button>


            </Grid>




          
        </Grid>


    </Grid>
</Window>
