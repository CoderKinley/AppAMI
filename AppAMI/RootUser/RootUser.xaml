<UserControl x:Class="AppAMI.RootUser.RootUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1270">

    <UserControl.Resources>
        <Style x:Key="filterControlStyle" TargetType="syncfusion:GridFilterControl">
            <Setter Property="FilterMode" Value="Both"  />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid Background="#202020">

            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Background="#2d2d30">

                <Grid>
                    <Menu>
                        <Menu.Resources>
                            <Style TargetType="{x:Type MenuItem}">
                                <Setter Property="Background" Value="#2d2d30"   />
                                <Setter Property="Foreground" Value="White"   />
                                <Setter Property="FontSize"  Value="11"   />

                            </Style>
                        </Menu.Resources>
                        <MenuItem Header="User" Margin=" 10">
                            <MenuItem x:Name="menEditUser" Header="Edit" Click="menEditUser_Click" />
                            <MenuItem x:Name="menTransCre" Header="Transfer Credentials" Click="menTransCre_Click" />
                        </MenuItem>
                        <MenuItem Header="Configuration" Margin=" 10">
                            <MenuItem x:Name="menUserDropDown" Header="User Dropdown" Click="menUserDropDown_Click" />
                            <MenuItem x:Name="menuMeterDropDown" Header="Meter Dropdown" Click="menuMeterDropDown_Click" />
                            <MenuItem x:Name="menuMriDropDown" Header="MRI Dropdown" Click="menuMriDropDown_Click"  />

                        </MenuItem>
                        <MenuItem Header="Help" Margin=" 10">
                            <MenuItem Header="About"/>
                        </MenuItem>
                    </Menu>


                </Grid>

            </Grid>

            <Grid Grid.Row="1"  Margin="15">

                <Grid  x:Name="grdRootUser">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition  Height="40"/>
                        <RowDefinition Height="190" />
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions >
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" Background="#202020" Margin="0 0 0 15">

                            <Rectangle  RadiusY="5" RadiusX="5" Fill="#2d2d30"   >
                                <Rectangle.Effect>
                                    <DropShadowEffect BlurRadius="15" Direction="0" RenderingBias="Quality"
                                          ShadowDepth="1" Color="#2d2d30"/>
                                </Rectangle.Effect>
                            </Rectangle>

                            <Grid Margin="15">
                                <Grid.ColumnDefinitions >
                                    <ColumnDefinition Width="0.7*"/>
                                    <ColumnDefinition Width=".8*"/>
                                    <ColumnDefinition Width="0.8*"/>
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />


                                </Grid.RowDefinitions>



                                <Label Grid.Row="0" Grid.ColumnSpan ="4" Content="Root User Info" Foreground="White"  VerticalAlignment="Center" HorizontalAlignment="Center"   Margin="10 0" />

                                <!--<StackPanel Grid.ColumnSpan="2" Orientation="Horizontal" Visibility="Collapsed">
                                -->
                                <!--<TextBox x:Name="txtUserId"    />-->
                                <!--
                                <TextBox x:Name="txtUserRole" />
                                <TextBox x:Name="txUserPassword"   />
                                <TextBox x:Name="txtUserId"   />
                            </StackPanel>-->


                                <Label Grid.Row="1" Content="Name:" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right"   Margin="10 0" />

                                <TextBox x:Name="txtName" Grid.Row="1" Grid.Column="1"  Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Stretch"  IsReadOnly="True"   Margin="10 0"/>

                                <Label Grid.Row="2" Content="Employee Id:" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10 0"/>
                                <TextBox x:Name="txtEmployeeId" Grid.Row="2" Grid.Column="1"  Foreground="White" VerticalAlignment="Center"  HorizontalAlignment="Stretch" IsReadOnly="True" Margin="10 0"/>


                                <Label Grid.Row="3" Content="Organisation:" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10 0"/>
                                <TextBox x:Name="txtOrga" Grid.Row="3" Grid.Column="1" Foreground="White" VerticalAlignment="Center"  HorizontalAlignment="Stretch" IsReadOnly="True" Margin="10 0" />

                                <Label Grid.Row="4" Content="Department:" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10 0"/>
                                <TextBox x:Name="txtDept" Grid.Row="4" Grid.Column="1"  Foreground="White" VerticalAlignment="Center"  HorizontalAlignment="Stretch" IsReadOnly="True"  Margin="10 0"/>


                                <Label Grid.Row="1" Grid.Column="2" Content="Designation:" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right"  Margin="10 0"/>
                                <TextBox x:Name="txtDesig" Grid.Row="1" Grid.Column="3"  Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Stretch"  IsReadOnly="True" Margin="10 0"/>


                                <Label Grid.Row="2"  Grid.Column="2" Content="Email:" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10 0"/>
                                <TextBox x:Name="txtEmail" Grid.Row="2" Grid.Column="3" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Stretch" IsReadOnly="True" Margin="10 0"/>


                                <Label Grid.Row="3"  Grid.Column="2" Content="Phone Number:" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10 0"/>
                                <TextBox x:Name="txtPhone" Grid.Row="3" Grid.Column="3"  Foreground="White" VerticalAlignment="Center"  HorizontalAlignment="Stretch" IsReadOnly="True"  Margin="10 0"/>



                            </Grid>



                        </Grid>

                        <Grid Grid.Column="1"  Background="#202020" Margin="15 0 0 15" >
                            <Rectangle  RadiusY="5" RadiusX="5" Fill="#2d2d30"   >
                                <Rectangle.Effect>
                                    <DropShadowEffect BlurRadius="15" Direction="0" RenderingBias="Quality"
                                          ShadowDepth="1" Color="#2d2d30"/>
                                </Rectangle.Effect>
                            </Rectangle>

                            <Grid Margin="15">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Label Content="Root User Event" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" />

                                </Grid>
                                <Grid Grid.Row="1">
                                    <syncfusion:SfDataGrid Grid.Row="0" x:Name="datagridUser"   
                                                       HorizontalAlignment="Center" 
                                               AutoGenerateColumns="False"  
                                               
                                               AllowResizingHiddenColumns="True" 
                                               AllowRowHoverHighlighting="True" 
                                               
                                               AllowEditing="False"
                                               AllowDeleting="False"
                                               AllowResizingColumns="True"
                                               FilterPopupStyle="{StaticResource filterControlStyle}"
                                               AllowSorting="True"
                                               AllowFiltering="True"
                                               AllowGrouping="True"
                                               SelectionMode="Single"
                                               NavigationMode="Row"
                                               ShowGroupDropArea="False"  
                                               ItemsSource="{Binding}"
                                               Background="#2d2d30" 
                                               Foreground="White"  
                                               RowHeight="25"    
                                               HeaderRowHeight="30" >
                                        <syncfusion:SfDataGrid.Resources>
                                            <Style TargetType="syncfusion:GridHeaderCellControl">
                                                <Setter Property="Background" Value="#2d2d30" />
                                                <Setter Property="Foreground" Value="White" />
                                                <Setter Property="FontSize" Value="11" />

                                            </Style>


                                        </syncfusion:SfDataGrid.Resources>

                                        <syncfusion:SfDataGrid.Columns >




                                            <syncfusion:GridTextColumn  MappingName="event_log">
                                                <syncfusion:GridTextColumn.HeaderTemplate>
                                                    <DataTemplate>
                                                        <TextBlock TextWrapping="Wrap" Text="Event" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </DataTemplate>
                                                </syncfusion:GridTextColumn.HeaderTemplate>
                                                <syncfusion:GridTextColumn.CellStyle>
                                                    <Style TargetType="syncfusion:GridCell">
                                                        <Setter Property="HorizontalAlignment" Value="Stretch"  />
                                                        <Setter Property="VerticalAlignment"  Value="Stretch"   />
                                                    </Style>
                                                </syncfusion:GridTextColumn.CellStyle>
                                                <syncfusion:GridTextColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding event_log}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </DataTemplate>
                                                </syncfusion:GridTextColumn.CellTemplate>
                                            </syncfusion:GridTextColumn>

                                            <syncfusion:GridTextColumn  MappingName="remarks">

                                                <syncfusion:GridTextColumn.HeaderTemplate>
                                                    <DataTemplate>
                                                        <TextBlock TextWrapping="Wrap" Text="Remarks" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </DataTemplate>
                                                </syncfusion:GridTextColumn.HeaderTemplate>

                                                <syncfusion:GridTextColumn.CellStyle>
                                                    <Style TargetType="syncfusion:GridCell">
                                                        <Setter Property="HorizontalAlignment" Value="Stretch"  />
                                                        <Setter Property="VerticalAlignment"  Value="Stretch"   />
                                                    </Style>
                                                </syncfusion:GridTextColumn.CellStyle>
                                                <syncfusion:GridTextColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding remarks}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </DataTemplate>
                                                </syncfusion:GridTextColumn.CellTemplate>
                                            </syncfusion:GridTextColumn>


                                            <syncfusion:GridTextColumn  MappingName="date">

                                                <syncfusion:GridTextColumn.HeaderTemplate>
                                                    <DataTemplate>
                                                        <TextBlock TextWrapping="Wrap" Text="Date" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </DataTemplate>
                                                </syncfusion:GridTextColumn.HeaderTemplate>

                                                <syncfusion:GridTextColumn.CellStyle>
                                                    <Style TargetType="syncfusion:GridCell">
                                                        <Setter Property="HorizontalAlignment" Value="Stretch"  />
                                                        <Setter Property="VerticalAlignment"  Value="Stretch"   />
                                                    </Style>
                                                </syncfusion:GridTextColumn.CellStyle>
                                                <syncfusion:GridTextColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding date}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </DataTemplate>
                                                </syncfusion:GridTextColumn.CellTemplate>
                                            </syncfusion:GridTextColumn>

                                            <syncfusion:GridTextColumn  MappingName="time">

                                                <syncfusion:GridTextColumn.HeaderTemplate>
                                                    <DataTemplate>
                                                        <TextBlock TextWrapping="Wrap" Text="Time" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </DataTemplate>
                                                </syncfusion:GridTextColumn.HeaderTemplate>
                                                <syncfusion:GridTextColumn.CellStyle>
                                                    <Style TargetType="syncfusion:GridCell">
                                                        <Setter Property="HorizontalAlignment" Value="Stretch"  />
                                                        <Setter Property="VerticalAlignment"  Value="Stretch"   />
                                                    </Style>
                                                </syncfusion:GridTextColumn.CellStyle>
                                                <syncfusion:GridTextColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding time}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </DataTemplate>
                                                </syncfusion:GridTextColumn.CellTemplate>
                                            </syncfusion:GridTextColumn>



                                            <syncfusion:GridTextColumn  MappingName="status_admin1">

                                                <syncfusion:GridTextColumn.HeaderTemplate>
                                                    <DataTemplate>
                                                        <TextBlock TextWrapping="Wrap" Text="Status Admin 1" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </DataTemplate>

                                                </syncfusion:GridTextColumn.HeaderTemplate>
                                                <syncfusion:GridTextColumn.CellStyle>
                                                    <Style TargetType="syncfusion:GridCell">
                                                        <Setter Property="HorizontalAlignment" Value="Stretch"  />
                                                        <Setter Property="VerticalAlignment"  Value="Stretch"   />
                                                    </Style>
                                                </syncfusion:GridTextColumn.CellStyle>
                                                <syncfusion:GridTextColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding status_admin1}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </DataTemplate>
                                                </syncfusion:GridTextColumn.CellTemplate>
                                            </syncfusion:GridTextColumn>

                                            <syncfusion:GridTextColumn  MappingName="status_admin2">

                                                <syncfusion:GridTextColumn.HeaderTemplate>
                                                    <DataTemplate>
                                                        <TextBlock TextWrapping="Wrap" Text="Status Admin 2" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </DataTemplate>
                                                </syncfusion:GridTextColumn.HeaderTemplate>

                                                <syncfusion:GridTextColumn.CellStyle>
                                                    <Style TargetType="syncfusion:GridCell">
                                                        <Setter Property="HorizontalAlignment" Value="Stretch"  />
                                                        <Setter Property="VerticalAlignment"  Value="Stretch"   />
                                                    </Style>
                                                </syncfusion:GridTextColumn.CellStyle>
                                                <syncfusion:GridTextColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding status_admin2}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </DataTemplate>
                                                </syncfusion:GridTextColumn.CellTemplate>
                                            </syncfusion:GridTextColumn>

                                            <syncfusion:GridTextColumn  MappingName="status_admin3">

                                                <syncfusion:GridTextColumn.HeaderTemplate>
                                                    <DataTemplate>
                                                        <TextBlock TextWrapping="Wrap" Text="Status Admin 3" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </DataTemplate>

                                                </syncfusion:GridTextColumn.HeaderTemplate>
                                                <syncfusion:GridTextColumn.CellStyle>
                                                    <Style TargetType="syncfusion:GridCell">
                                                        <Setter Property="HorizontalAlignment" Value="Stretch"  />
                                                        <Setter Property="VerticalAlignment"  Value="Stretch"   />
                                                    </Style>
                                                </syncfusion:GridTextColumn.CellStyle>
                                                <syncfusion:GridTextColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding status_admin3}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </DataTemplate>
                                                </syncfusion:GridTextColumn.CellTemplate>
                                            </syncfusion:GridTextColumn>



                                        </syncfusion:SfDataGrid.Columns>
                                    </syncfusion:SfDataGrid>

                                </Grid>
                            </Grid>

                        </Grid>

                        <!--<StackPanel Grid.Row="1" Orientation="Horizontal" Visibility="Collapsed"   >
                        <Label x:Name="lblCurrentUserId"  Content ="{Binding Path=UserId1}" Foreground="Red" />
                        <Label x:Name="lblCurrentUserName"  Content ="{Binding Path=UserName1}" Foreground="Red" />
                        <Label x:Name="lblCurrentUserEmployeeId"  Content ="{Binding Path=EmployeeId1}" Foreground="Red" />

                    </StackPanel>-->
                    </Grid>

                    <Grid Grid.Row="1" Margin="15 0" >
                        <Button Grid.Row=" 1" x:Name="btnAddAdmin" Content="Add New Administrator" BorderThickness="0"
                            HorizontalAlignment="Center" Background="Transparent"
                        Click="btnAddAdmin_Click" />
                    </Grid>

                    <Grid Grid.Row="2" >
                        <Rectangle  RadiusY="5" RadiusX="5" Fill="#2d2d30"   >
                            <Rectangle.Effect>
                                <DropShadowEffect BlurRadius="15" Direction="0" RenderingBias="Quality"
                                          ShadowDepth="1" Color="#2d2d30"/>
                            </Rectangle.Effect>
                        </Rectangle>

                        <Grid Margin="15">
                            <syncfusion:SfDataGrid Grid.Row="0" x:Name="datagridAdmin"   
                                               HorizontalAlignment="Center" 
                                               AutoGenerateColumns="False"  
                                               
                                               AllowResizingHiddenColumns="True" 
                                               AllowRowHoverHighlighting="True" 
                                               
                                               AllowEditing="False"
                                               AllowDeleting="False"
                                               AllowResizingColumns="True"
                                               FilterPopupStyle="{StaticResource filterControlStyle}"
                                               AllowSorting="True"
                                               AllowFiltering="True"
                                               AllowGrouping="True"
                                               SelectionMode="Single"
                                               NavigationMode="Row"
                                               ShowGroupDropArea="False"  
                                               ItemsSource="{Binding}"
                                               Background="#2d2d30" 
                                               Foreground="White"  
                                               RowHeight="25"    
                                               HeaderRowHeight="30" >
                                <syncfusion:SfDataGrid.Resources>
                                    <Style TargetType="syncfusion:GridHeaderCellControl">
                                        <Setter Property="Background" Value="#2d2d30" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="FontSize" Value="11" />
                                    </Style>


                                </syncfusion:SfDataGrid.Resources>

                                <syncfusion:SfDataGrid.Columns >



                                    <syncfusion:GridTextColumn   MappingName="employee_id" >

                                        <syncfusion:GridTextColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock TextWrapping="Wrap" Text="User ID" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </DataTemplate>

                                        </syncfusion:GridTextColumn.HeaderTemplate>
                                        <syncfusion:GridTextColumn.CellStyle>
                                            <Style TargetType="syncfusion:GridCell">
                                                <Setter Property="HorizontalAlignment" Value="Stretch"  />
                                                <Setter Property="VerticalAlignment"  Value="Stretch"   />
                                            </Style>
                                        </syncfusion:GridTextColumn.CellStyle>
                                        <syncfusion:GridTextColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding user_id}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </DataTemplate>
                                        </syncfusion:GridTextColumn.CellTemplate>
                                    </syncfusion:GridTextColumn>

                                    <syncfusion:GridTextColumn 
                                    MappingName="employee_id" >

                                        <syncfusion:GridTextColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock TextWrapping="Wrap" Text="Employee ID" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </DataTemplate>

                                        </syncfusion:GridTextColumn.HeaderTemplate>
                                        <syncfusion:GridTextColumn.CellStyle>
                                            <Style TargetType="syncfusion:GridCell">
                                                <Setter Property="HorizontalAlignment" Value="Stretch"  />
                                                <Setter Property="VerticalAlignment"  Value="Stretch"   />
                                            </Style>
                                        </syncfusion:GridTextColumn.CellStyle>
                                        <syncfusion:GridTextColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding employee_id}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </DataTemplate>
                                        </syncfusion:GridTextColumn.CellTemplate>
                                    </syncfusion:GridTextColumn>

                                    <syncfusion:GridTextColumn  MappingName="user_name">

                                        <syncfusion:GridTextColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock TextWrapping="Wrap" Text="Name" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </DataTemplate>
                                        </syncfusion:GridTextColumn.HeaderTemplate>

                                        <syncfusion:GridTextColumn.CellStyle>
                                            <Style TargetType="syncfusion:GridCell">
                                                <Setter Property="HorizontalAlignment" Value="Stretch"  />
                                                <Setter Property="VerticalAlignment"  Value="Stretch"   />
                                            </Style>
                                        </syncfusion:GridTextColumn.CellStyle>
                                        <syncfusion:GridTextColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding user_name}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </DataTemplate>
                                        </syncfusion:GridTextColumn.CellTemplate>
                                    </syncfusion:GridTextColumn>



                                    <syncfusion:GridTextColumn  MappingName="oranisation">

                                        <syncfusion:GridTextColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock TextWrapping="Wrap" Text="Organisation" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </DataTemplate>
                                        </syncfusion:GridTextColumn.HeaderTemplate>

                                        <syncfusion:GridTextColumn.CellStyle>
                                            <Style TargetType="syncfusion:GridCell">
                                                <Setter Property="HorizontalAlignment" Value="Stretch"  />
                                                <Setter Property="VerticalAlignment"  Value="Stretch"   />
                                            </Style>
                                        </syncfusion:GridTextColumn.CellStyle>
                                        <syncfusion:GridTextColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding oranisation}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </DataTemplate>
                                        </syncfusion:GridTextColumn.CellTemplate>
                                    </syncfusion:GridTextColumn>

                                    <syncfusion:GridTextColumn  MappingName="department">

                                        <syncfusion:GridTextColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock TextWrapping="Wrap" Text="Department" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </DataTemplate>

                                        </syncfusion:GridTextColumn.HeaderTemplate>
                                        <syncfusion:GridTextColumn.CellStyle>
                                            <Style TargetType="syncfusion:GridCell">
                                                <Setter Property="HorizontalAlignment" Value="Stretch"  />
                                                <Setter Property="VerticalAlignment"  Value="Stretch"   />
                                            </Style>
                                        </syncfusion:GridTextColumn.CellStyle>
                                        <syncfusion:GridTextColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding department}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </DataTemplate>
                                        </syncfusion:GridTextColumn.CellTemplate>
                                    </syncfusion:GridTextColumn>

                                    <syncfusion:GridTextColumn  MappingName="designation">

                                        <syncfusion:GridTextColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock TextWrapping="Wrap" Text="Designation" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </DataTemplate>
                                        </syncfusion:GridTextColumn.HeaderTemplate>

                                        <syncfusion:GridTextColumn.CellStyle>
                                            <Style TargetType="syncfusion:GridCell">
                                                <Setter Property="HorizontalAlignment" Value="Stretch"  />
                                                <Setter Property="VerticalAlignment"  Value="Stretch"   />
                                            </Style>
                                        </syncfusion:GridTextColumn.CellStyle>
                                        <syncfusion:GridTextColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding designation}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </DataTemplate>
                                        </syncfusion:GridTextColumn.CellTemplate>
                                    </syncfusion:GridTextColumn>




                                    <syncfusion:GridTextColumn  MappingName="user_role">

                                        <syncfusion:GridTextColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock TextWrapping="Wrap" Text="User Role" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </DataTemplate>
                                        </syncfusion:GridTextColumn.HeaderTemplate>

                                        <syncfusion:GridTextColumn.CellStyle>
                                            <Style TargetType="syncfusion:GridCell">
                                                <Setter Property="HorizontalAlignment" Value="Stretch"  />
                                                <Setter Property="VerticalAlignment"  Value="Stretch"   />
                                            </Style>
                                        </syncfusion:GridTextColumn.CellStyle>
                                        <syncfusion:GridTextColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding user_role}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </DataTemplate>
                                        </syncfusion:GridTextColumn.CellTemplate>
                                    </syncfusion:GridTextColumn>

                                    <syncfusion:GridTextColumn  MappingName="email">

                                        <syncfusion:GridTextColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock TextWrapping="Wrap" Text="Email" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </DataTemplate>

                                        </syncfusion:GridTextColumn.HeaderTemplate>
                                        <syncfusion:GridTextColumn.CellStyle>
                                            <Style TargetType="syncfusion:GridCell">
                                                <Setter Property="HorizontalAlignment" Value="Stretch"  />
                                                <Setter Property="VerticalAlignment"  Value="Stretch"   />
                                            </Style>
                                        </syncfusion:GridTextColumn.CellStyle>
                                        <syncfusion:GridTextColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding email}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </DataTemplate>
                                        </syncfusion:GridTextColumn.CellTemplate>
                                    </syncfusion:GridTextColumn>

                                    <syncfusion:GridTextColumn  MappingName="phone_number">

                                        <syncfusion:GridTextColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock TextWrapping="Wrap" Text="Phone" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </DataTemplate>

                                        </syncfusion:GridTextColumn.HeaderTemplate>
                                        <syncfusion:GridTextColumn.CellStyle>
                                            <Style TargetType="syncfusion:GridCell">
                                                <Setter Property="HorizontalAlignment" Value="Stretch"  />
                                                <Setter Property="VerticalAlignment"  Value="Stretch"   />
                                            </Style>
                                        </syncfusion:GridTextColumn.CellStyle>
                                        <syncfusion:GridTextColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding phone_number}" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </DataTemplate>
                                        </syncfusion:GridTextColumn.CellTemplate>
                                    </syncfusion:GridTextColumn>


                                    <syncfusion:GridTemplateColumn  MappingName="Delete" Width="100" syncfusion:FocusManagerHelper.WantsKeyInput="True">


                                        <syncfusion:GridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button x:Name="btnDelete" Background="#ff5768" Height="20" Margin="5 2" syncfusion:FocusManagerHelper.FocusedElement="True" Click="btnDelete_Click" >
                                                    <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="Delete"    Margin="-5"     HorizontalAlignment="Center" VerticalAlignment="Center"  />

                                                    </StackPanel>
                                                </Button>
                                            </DataTemplate>
                                        </syncfusion:GridTemplateColumn.CellTemplate>
                                    </syncfusion:GridTemplateColumn>

                                </syncfusion:SfDataGrid.Columns>
                            </syncfusion:SfDataGrid>

                        </Grid>
                    </Grid>
                </Grid>

            </Grid>

        </Grid>

        <Grid>
            <syncfusion:SfCircularProgressBar 
                x:Name="progressLogin"
                Visibility="Collapsed"           
                ProgressContent="Loading..."
               
                Width="100" 
                Height="100" 
                IsIndeterminate="True"  
                ShowProgressValue="False">
                <syncfusion:SfCircularProgressBar.AnimationEasing>
                    <BounceEase
                Bounces="20"
                Bounciness="5"
                EasingMode="EaseOut" />
                </syncfusion:SfCircularProgressBar.AnimationEasing>
            </syncfusion:SfCircularProgressBar>
        </Grid>
    </Grid>

</UserControl>
